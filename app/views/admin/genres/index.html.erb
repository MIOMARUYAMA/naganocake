 ジャンル一覧・追加

  <%= form_with model: @genre, url:admin_genres_path do |f| %>
    <div class="form-group">
      <label for="book_title">ジャンル名</label><br>
        <%= f.text_field :name %>
    </div>

    <div class="form-group">
      <%= f.submit '新規登録' %>
    </div>
  <% end %>

  <% @genres.each do |genre| %>
    <%= genre.name %>
    <%= link_to '編集する', edit_admin_genre_path(genre.id) %>
  <% end %>