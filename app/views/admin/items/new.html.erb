<main>
  <h4>新規商品登録</h4>
    <div class="d-flex align-items-center justify-content-center">
      <%= form_with model: Item.new, url:admin_items_path do |f| %>
        <div class="form-group">
         <label for="item_imagee">商品画像</label><br>
          <%= f.file_field :image, accept: "image/*" %>
        </div>
        <div class="form-group">
         <label for="item_name">商品名</label><br>
          <%= f.text_field :name %>
        </div>
        <div class="form-group">
         <label for="item_introduction">商品説明</label><br>
          <%= f.text_area :introduction %>
        </div>
        <div class="form-group">
         <label for="genre">ジャンル</label><br>
          <%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: "選択してください" %>
        </div>
        <div class="form-group">
         <label for="item_price">税抜き価格</label><br>
          <%= f.text_field :price %>
        </div>
        <div class="form-group">
         <label for="item_status">販売ステータス</label><br>
          <%= f.radio_button :is_active, :true %>
          <%= f.label :is_active, "販売中" %>
          <%= f.radio_button :is_active, :false %>
          <%= f.label :is_active, "販売停止中" %>
        </div>
        <div class="form-group">
          <%= f.submit '新規登録', class:"btn btn-success" %>
        </div>
      <% end %>
    </div>
</main>