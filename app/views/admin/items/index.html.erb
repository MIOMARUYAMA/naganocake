<main>
  <dic class="container">
    <div class="row col-3">
      <h4>商品一覧</h4>
        <%= link_to new_admin_item_path, method: :get do %>
          <button type="button" class="btn btn-light rounded-circle p-0" style="width:2rem;height:2rem;">＋</button>
        <% end %>
    </div>
      <div class="container">
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>商品ID</th>
              <th>商品名</th>
              <th>税抜き価格</th>
              <th>ジャンル</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name, admin_item_path(item.id) %></td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>
            <td><%= item.is_active ? '販売中' : '販売停止中' %></td>
          </tr>
            <% end %>
          </tbody>
        </table>
        <div class="row justify-content-center">
        <%= paginate @items %>
        </div>
      </div>
  </dic>
</main>