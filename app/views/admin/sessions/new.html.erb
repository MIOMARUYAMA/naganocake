<main>
  <div class="container">
    <div class="row">
      <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">
        <h4 class="my-4">管理者ログイン</h4>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group row">
              <label for="email" class="col-sm-3 col-form-label">メールアドレス</label>
              <div class="col-sm-9">
                <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
              </div>
            </div>
            <div class="form-group row">
              <label for="password" class="col-sm-3 col-form-label">パスワード</label>
              <div class="col-sm-9">
                <%= f.password_field :password, autocomplete: "current-password" %>
              </div>
            </div>
            <div class="form-group row">
            <div class="col-sm-3"></div>
              <%= f.submit "ログイン", class:"btn btn-primary" %>
            </div>
          <% end %>

<%= render "admin/shared/links" %>
      </div>
    </div>
  </div>
</main>