<main>
  <div class="container">
      <h4 class="my-4"><%= @customer.full_name %>さんの会員情報編集</h4>
    <div class="d-flex align-items-center justify-content-center">
      <%= form_with model: @customer, url:admin_customer_path do |f| %>
          <div class="form-group row">
            <label for="customer_id" class="col-sm-3">会員ID</label>
              <div class="col-sm-8">
                <%= @customer.id %>
              </div>
          </div>
          <div class="row mb-3">
            <label for="customer_name" class="col-sm-3">氏名</label>
              <div class="col-sm-4">
                <%= f.text_field :last_name %>
              </div>
              <div class="col-lg-1"></div>
              <div class="col-sm-4">
                <%= f.text_field :first_name %>
              </div>
          </div>
          <div class="row mb-3">
            <label for="customer_name_kana" class="col-sm-3">フリガナ</label>
              <div class="col-sm-4">
                <%= f.text_field :last_name_kana %>
              </div>
              <div class="col-lg-1"></div>
              <div class="col-sm-4">
                <%= f.text_field :first_name_kana %>
              </div>
          </div>
          <div class="form-group row">
            <label for="customer_postalcode" class="col-sm-3">郵便番号</label>
              <div class="col-sm-8">
                <%= f.text_field :postal_code %>
              </div>
          </div>
          <div class="form-group row">
            <label for="customer_address" class="col-sm-3">住所</label>
              <div class="col-sm-8">
                <%= f.text_field :address %>
              </div>
          </div>
          <div class="form-group row">
            <label for="customer_phonenumber" class="col-sm-3">電話番号</label>
              <div class="col-sm-8">
                <%= f.text_field :telephone_number %>
              </div>
          </div>
          <div class="form-group row">
            <label for="customer_email" class="col-auto">メールアドレス</label>
              <div class="col-auto">
                <%= f.text_field :email %>
              </div>
          </div>
          <div class="form-group row">
            <label for="customer_status" class="col-auto">会員ステータス</label>
              <div class="col-auto">
                <%= f.radio_button :is_active, :true %>
                <%= f.label :is_active, "有効" %>
                <%= f.radio_button :is_active, :false %>
                <%= f.label :is_active, "退会" %>
              </div>
          </div>
          <div class="row justify-content-center">
            <%= f.submit '変更を保存', class:"btn btn-success" %>
          </div>
        </form>
      <% end %>
    </div>
  </div>
</main>

