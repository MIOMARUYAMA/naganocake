<main>
  <div class="container">
    <div class="row col-3">
      <h4>会員一覧</h4>
    </div>
    <div class="container">
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td><%= link_to customer.full_name, admin_customer_path(customer.id) %></td>
            <td><%= customer.email %></td>
            <td><%= customer.is_active ? '有効' : '退会' %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
        <div class="row justify-content-center">
          <%= paginate @customers %>
        </div>
    </div>
  </dic>
</main>

