<main>
  <div class ="container">
    <h4 class="my-4">配送先編集</h4>
    <%= form_with model: @address, url:address_path do |f| %>
      <div class="form-group row">
        <label for class="col-sm-3">郵便番号(ハイフンなし)</label>
        <div class="col-sm-9">
          <%= f.text_field :postal_code %>
        </div>
      </div>
      <div class="form-group row">
        <label for class="col-sm-3">住所</label>
        <div class="col-sm-9">
          <%= f.text_field :address %>
        </div>
      </div>
      <div class="form-group row">
        <label for class="col-sm-3">宛名</label>
        <div class="col-sm-5">
          <%= f.text_field :name %>
        </div>
        <div class="col-sm-4">
          <%= f.submit '変更を保存', class: "btn btn-success" %>
      </div>
      <% end %>
  </div>
</main>