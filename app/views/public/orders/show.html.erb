<h1>注文履歴詳細</h1>
  <h4>注文情報</h4>
    <table>
       <thead>
          <tr>
             <th>注文日</th>
              <th>配送先</th>
              <th>支払方法</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= @order.created_at %></td>
              <td><%= "〒" + @order.postal_code %><br>
                  <%= @order.address %><br>
                  <%= @order.name %><br>
              </td>
              <td><%= @order.payment_method_i18n %></td>
              <td><%= @order.order_status_i18n %></td>
            </tr>
          </tbody>
    </table>
  <h4>注文内容</h4>
    <table>
       <thead>
          <tr>
             <th>商品</th>
              <th>単価（税込）</th>
              <th>個数</th>
              <th>小計</th>
           </tr>
        </thead>
          <tbody>
             <% total_price = 0 %>
            <% @order_details.each do |order_detail| %>
              <td><%= order_detail.item.name %></td>
              <td><%= order_detail.price %></td>
              <td><%= order_detail.amount %></td>
              <td><%= order_detail.subtotal %></td>
              <% total_price += order_detail.subtotal %>
            <% end %>
          </tr>
    </table>
  <h4>請求情報</h4>
  <table>
     <thead>
        <tr>
           <th>商品合計</th>
            <th>配送料</th>
            <th>ご請求額</th>
          </tr>
        </thead>
        <tbody>
            <td><%= total_price %></td>
            <td>800</td>
            <td><%= total_price + 800 %></td>
    </table>
