<h1>注文情報入力</h1>
<h3>支払い方法</h3>
<%= form_with model: Order.new, url: orders_confirm_path do |f| %>
  <%= f.radio_button :payment_method, "credit_card" %>
  <%= f.label :payment_method, "クレジットカード" %>
  <%= f.radio_button :payment_method, "transfer" %>
  <%= f.label :payment_method, "銀行振込" %>

<h3>お届け先</h3>
  <%= f.radio_button :address_option, 0 %>
  <%= f.label :address_option, "ご自身の住所" %><br>
  <%= current_customer.address_display %><br>
  <%= f.radio_button :address_option, 1 %>
  <%= f.label :address_option, "登録済住所から選択" %><br>
    
      <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %><br>
    
  <%= f.radio_button :address_option, 2 %>
  <%= f.label :address_option, "新しいお届け先" %><br>
    <p>郵便番号（ハイフンなし）</p>
    <%= f.text_field :postal_code %>
    <p>住所</p>
    <%= f.text_field :address %>
    <p>宛名</p>
    <%= f.text_field :name %>
    <%= f.submit '確認画面へ進む' %>



<% end %>
