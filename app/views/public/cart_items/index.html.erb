<h1>ショッピングカート</h1>
  <%= link_to "カートを空にする", destroy_all_path, method: :delete %>
  <table>
     <thead>
        <tr>
           <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
            <% @total_price = 0 %>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= image_tag cart_item.item.get_image(150,150) %><%= cart_item.item.name %></td>
            <td><%= cart_item.item.add_tax_price %></td>
            <td><%= form_with model: cart_item, url: cart_item_path(cart_item) , method: :patch do |f| %>
                  <%= f.select :amount, *[1..5] , include_blank: "選択して下さい" %>
                  <%= f.hidden_field :item_id, :value => cart_item.item.id %>
                  <%= f.submit '変更'%>
                <% end %>
            </td>
            <td><%= cart_item.subtotal %></td>
            <td><%= link_to "削除する", cart_item_path(cart_item), method: :delete %></td>

            <% @total_price = @total_price + cart_item.subtotal %>
           </tr>
          <% end %>
        </tbody>
    </table>
    <%= link_to "買い物を続ける", root_path %>
    合計金額<%= @total_price %>

     <%= link_to "情報入力に進む", new_order_path %>
