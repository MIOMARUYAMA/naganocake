<main>
  <h4 class="my-3">マイページ</h4>
    <div class="row">
      <h5 class="col-sm-3">登録情報</h5>
      <div class="col-sm-3">
        <%= link_to '編集する', customers_edit_path, {class: "btn btn-success mb-3"} %><br>
      </div>
    </div>
    <table class="table table-hover table-inverse">
      <tbody>
        <tr><td>氏名</td><td><%= current_customer.last_name %><%= current_customer.first_name %></td></tr>
        <tr><td>カナ</td><td><%= current_customer.last_name_kana %><%= current_customer.first_name_kana %></td></tr>
        <tr><td>郵便番号</td><td><%= current_customer.postal_code %></td></tr>
        <tr><td>住所</td><td><%= current_customer.address %></td></tr>
        <tr><td>電話番号</td><td><%= current_customer.telephone_number %></td></tr>
        <tr><td>メールアドレス</td><td><%= current_customer.email %></td></tr>
      </tbody>
    </table>
    <div class="row">
      <div class="col-sm-3">配送先</div>
      <div class="col-sm-3"><%= link_to '一覧を見る', addresses_path, {class: "btn btn-primary mb-3"} %></div>
    </div>
    <div class="row">
      <div class="col-sm-3">注文履歴</div>
      <div class="col-sm-3"><%= link_to '一覧を見る', orders_path, {class: "btn btn-primary"} %></div>
    </div>
</main>
