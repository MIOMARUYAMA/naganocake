<main>
  <div class="container">
    <h4 class="my-4">新規会員登録</h4>
      <div class="d-flex align-items-center justify-content-center">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="row form-group mb-4">
            <label for="customer_name" class="col-5">名前</label>
              <%= f.text_field :last_name, placeholder: "(姓)", class: "col-3" %>
              <%= f.text_field :first_name, placeholder: "(メイ)", class: "col-3 offset-1" %>
        </div>

        <div class="row form-group mb-4">
          <label for="customer_name_kana" class="col-5">フリガナ</label>
          <%= f.text_field :last_name_kana, placeholder: "(セイ)", class: "col-3" %>
          <%= f.text_field :first_name_kana, placeholder: "(メイ)", class: "col-3 offset-1" %>
        </div>

          <div class="row form-group mb-4">
            <label for="customer_email" class="col-5">メールアドレス</label>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-5" %>
          </div>

          <div class="row form-group mb-4">
            <label for="customer_postal_code" class="col-5">郵便番号(ハイフンなし)</label>
              <%= f.text_field :postal_code, class: "col-5" %>
          </div>

          <div class="row form-group mb-4">
            <label for="customer_address" class="col-5">住所</label>
              <%= f.text_field :address, class: "col-7" %>
          </div>

          <div class="row form-group mb-4">
            <label for="customer_phonenumber" class="col-5">電話番号(ハイフンなし)</label>
              <%= f.text_field :telephone_number, class: "col-5" %>
          </div>

          <div class="row form-group mb-4">
            <label for="customer_phonenumber" class="col-5">パスワード(6文字以上)</label>
              <% if @minimum_password_length %>
              <% end %>
              <%= f.password_field :password, autocomplete: "new-password", class: "col-5" %>
          </div>

          <div class="row form-group mb-4">
            <label for="customer_phonenumber" class="col-5">パスワード(確認用)</label>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-5" %>
          </div>

          <div class="actions">
            <%= f.submit "新規登録", class:"btn btn-success col-3 offset-5" %>
          </div>
          <% end %>
      </div>

      <h4 class="my-4">既に登録済みの方</h4>
        <%= link_to 'こちら', new_customer_session_path %>からログインしてください。
  </div>
</main>
