<main>
  <div class="container">
    <h1>商品一覧(全<%= Item.count %>件)</h1>
      <div class="row">
        <% @items.each do |item| %>
          <div class="col-sm-3">
            <%= link_to item_path(item.id) do %>
              <%= image_tag item.get_image(200,200) %>
            <% end %>
             <div class ="row">
              <%= item.name %><br>
              ¥<%= item.price %>
              </div>
          </div>
        <% end %>
      </div>
      <div class="row justify-content-center">
        <%= paginate @items %>
      </div>
  </div>
</main>
